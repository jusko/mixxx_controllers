<?xml version='1.0' encoding='utf-8'?>
<MixxxControllerPreset schemaVersion="1" mixxxVersion="2.2.0">
    <info>
        <name>Numark DJ2GO2</name>
        <author>jusko</author>
        <description>Very basic controller mappings</description>
    </info>
    <controller id="Numark DJ2GO2">
        <scriptfiles>
            <file filename="Numark-DJ2GO2.script.js" functionprefix="NumarkDJ2GO2"/>
        </scriptfiles>
        <controls>
            <!-- Master controls -->
            <control>
                <group>[Master]</group>
                <key>gain</key>
                <description>Master Gain</description>
                <status>0xBF</status>
                <midino>0x0A</midino>
                <options>
                    <soft-takeover/>
                </options>
            </control>
            <control>
                <group>[Master]</group>
                <key>headGain</key>
                <description>Master Headphone Gain</description>
                <status>0xBF</status>
                <midino>0x0C</midino>
                <options>
                    <soft-takeover/>
                </options>
            </control>
            <control>
                <group>[Master]</group>
                <key>crossfader</key>
                <description>Crossfader</description>
                <status>0xBF</status>
                <midino>0x08</midino>
                <options>
                    <soft-takeover/>
                </options>
            </control>

            <!-- Sync -->
            <control>
                <group>[Channel1]</group>
                <key>NumarkDJ2GO2.syncPressed</key>
                <description>Sync pressed (Channel 1)</description>
                <status>0x90</status>
                <midino>0x02</midino>
                <options>
                    <Script-Binding/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>NumarkDJ2GO2.syncReleased</key>
                <description>Sync released (Channel 1)</description>
                <status>0x80</status>
                <midino>0x02</midino>
                <options>
                    <Script-Binding/>
                </options>
            </control>

            <control>
                <group>[Channel2]</group>
                <key>NumarkDJ2GO2.syncPressed</key>
                <description>Sync pressed (Channel 2)</description>
                <status>0x91</status>
                <midino>0x02</midino>
                <options>
                    <Script-Binding/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>NumarkDJ2GO2.syncReleased</key>
                <description>Sync released (Channel 2)</description>
                <status>0x81</status>
                <midino>0x02</midino>
                <options>
                    <Script-Binding/>
                </options>
            </control>

            <!-- PFL -->
            <control>
                <group>[Channel1]</group>
                <key>NumarkDJ2GO2.headphonesOn</key>
                <description>Headphones On (Channel 1)</description>
                <status>0x90</status>
                <midino>0x1B</midino>
                <options>
                    <Script-Binding/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>NumarkDJ2GO2.headphonesOff</key>
                <description>Headphones Off (Channel 1)</description>
                <status>0x80</status>
                <midino>0x1B</midino>
                <options>
                    <Script-Binding/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>NumarkDJ2GO2.headphonesOn</key>
                <description>Headphones on (Channel 2)</description>
                <status>0x91</status>
                <midino>0x1B</midino>
                <options>
                    <Script-Binding/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>NumarkDJ2GO2.headphonesOff</key>
                <description>Headphones off (Channel 2)</description>
                <status>0x81</status>
                <midino>0x1B</midino>
                <options>
                    <Script-Binding/>
                </options>
            </control>

            <control>
                <group>[Channel1]</group>
                <key>pregain</key>
                <description>Gain (Channel 1)</description>
                <status>0xB0</status>
                <midino>0x16</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>cue_default</key>
                <description>Cue (Channel 1)</description>
                <status>0x80</status>
                <midino>0x01</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>cue_default</key>
                <description>Cue (Channel 1)</description>
                <status>0x90</status>
                <midino>0x01</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>play</key>
                <description>Play/pause (Channel 1)</description>
                <status>0x90</status>
                <midino>0x00</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>play</key>
                <description>Play/pause (Channel 1)</description>
                <status>0x80</status>
                <midino>0x00</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>rate</key>
                <description>Playback speed (Channel 1)</description>
                <status>0xB0</status>
                <midino>0x09</midino>
                <options>
                    <soft-takeover/>
                    <invert/>
                </options>
            </control>
            <!-- Channel 2 mappings -->
            <control>
                <group>[Channel2]</group>
                <key>pregain</key>
                <description>Gain (Channel 2)</description>
                <status>0xB1</status>
                <midino>0x16</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>play</key>
                <description>Play/pause (Channel 2)</description>
                <status>0x91</status>
                <midino>0x00</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>play</key>
                <description>Play/pause (Channel 2)</description>
                <status>0x81</status>
                <midino>0x00</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>cue_default</key>
                <description>Cue (Channel 2)</description>
                <status>0x91</status>
                <midino>0x01</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>cue_default</key>
                <description>Cue (Channel 2)</description>
                <status>0x81</status>
                <midino>0x01</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>rate</key>
                <description>Playback speed (Channel 2)</description>
                <status>0xB1</status>
                <midino>0x09</midino>
                <options>
                    <invert/>
                </options>
            </control>
        </controls>
        <outputs/>
    </controller>
</MixxxControllerPreset>
